<section class="register">
  <div class="register__content">
    <h1 class="register__title">Registro de usuario</h1>
    <form action="/auth/register" method="post" class="register__form">
      <div class="register__input-content">
        <input class="register__input" type="text" placeholder="Email" name="email" />
      </div>
      <div class="register__input-content">
        <input class="register__input" type="password" placeholder="Password" name="password" />
      </div>
      <div class="register__input-content">
        <input class="register__input" type="text" placeholder="Name" name="name" />
      </div>
      <div class="register__input-content">
        <input class="register__input" type="text" placeholder="Address" name="address" />
      </div>
      <div class="register__input-content">
        <input class="register__input" type="number" placeholder="Age" name="age" />
      </div>
      <div class="register__input-content">
        <input class="register__input" type="text" placeholder="Phone Number" name="phonenumber" />
      </div>
      <div class="register__input-content">
        <input class="register__input" type="file" placeholder="Phone Number" name="phonenumber" />
      </div>
      <div class="register__input-content">
        <input class="register__button-submit" type="submit" />
      </div>
    </form>
    <hr />
    <a href="/auth/login">
      <button class="register__button-login">Ir a Login</button>
    </a>
  </div>
</section>